<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="{{packageName}}.dao.mapper.UserMapper">

    <select id="getByName" parameterType="string" resultType="{{packageName}}.dao.dataobject.UserDO">
        SELECT *
        FROM users
        WHERE name = #{value}
    </select>

    <select id="getById" parameterType="long" resultType="{{packageName}}.dao.dataobject.UserDO">
        SELECT *
        FROM users
        WHERE id = #{value}
    </select>

    <insert id="insert" parameterType="{{packageName}}.dao.dataobject.UserDO">
        INSERT INTO users(name, age) VALUES (#{name}, #{age})
        <selectKey resultType="java.lang.Long" keyProperty="id">
            SELECT LAST_INSERT_ID() AS ID
        </selectKey>
    </insert>
</mapper>